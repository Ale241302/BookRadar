@model BookRadar.Web.Models.ViewModels.SearchBooksViewModel
@{
    ViewData["Title"] = "Buscador";
}

<section class="mx-auto" style="max-width: 980px;">
    <header class="mb-4">
        <h1 class="display-6 title">Encuentra libros por autor</h1>
    </header>

    <div class="card card-soft mb-4">
        <div class="card-body">
            <form asp-action="Index" method="post" class="row g-3" id="searchForm" novalidate>
                <div class="col-12 col-md-9">
                    <label class="form-label" for="Autor">Autor</label>
                    <input asp-for="Autor" id="Autor" class="form-control form-control-lg"
                           placeholder="Ej: Gabriel GarcÌa M·rquez"
                           pattern="[a-zA-Z·ÈÌÛ˙¡…Õ”⁄Ò—\s]{1,200}" />
                    <span class="text-danger" asp-validation-for="Autor"></span>
                </div>
                <div class="col-12 col-md-3 d-grid align-items-end">
                    <button id="btnBuscar" class="btn btn-brand btn-lg" type="submit" disabled>
                        <span id="spinnerBuscar" class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" style="display:none;"></span>
                        <span class="visually-hidden">BuscandoÖ</span>
                        Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model?.Resultados?.Any() == true)
    {
        <div class="card card-soft">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-semibold">Resultados</span>
                <span class="badge rounded-pill bg-accent">@Model.Resultados.Count</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <!-- ID para DataTables -->
                    <table id="resultadosTable" class="table table-hover align-middle mb-0 table-elevated">
                        <thead class="table-head">
                            <tr>
                                <th>TÌtulo</th>
                                <th style="width: 120px;">AÒo</th>
                                <th>Editorial</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.Resultados)
                            {
                                <tr>
                                    <td class="fw-500">@r.Titulo</td>
                                    <td>@(r.Anio?.ToString() ?? "ó")</td>
                                    <td class="text-muted">@(!string.IsNullOrWhiteSpace(r.Editorial) ? r.Editorial : "ó")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Historial" class="btn btn-brand btn-responsive">Ver historial</a>
            </div>
        </div>
    }
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- DataTables (BS5) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.css">

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const inputAutor = document.getElementById('Autor');
            const spinner = document.getElementById('spinnerBuscar');
            const btnBuscar = document.getElementById('btnBuscar');
            const form = document.getElementById('searchForm');

            // FunciÛn para habilitar/deshabilitar el botÛn seg˙n contenido
            const setBtnState = () => {
                const hasText = inputAutor.value.trim().length > 0;
                btnBuscar.disabled = !hasText;
            };

            // Restringe caracteres del input (solo letras y espacios)
            inputAutor?.addEventListener('input', function () {
                const start = this.selectionStart, end = this.selectionEnd;
                this.value = this.value.replace(/[^a-zA-Z·ÈÌÛ˙¡…Õ”⁄Ò—\s]/g, '');
                setBtnState();
                // Restablecer caret si fue necesario
                this.setSelectionRange(start, end);
            });

            // Estado inicial
            setBtnState();

            // Mostrar spinner al enviar si hay texto
            form.addEventListener('submit', function (e) {
                if (inputAutor.value.trim() !== "") {
                    spinner.style.display = "inline-block";
                    // No fuerces disabled aquÌ; lo maneja el estado
                } else {
                    e.preventDefault();
                }
            });

            // Inicializa DataTables si existe la tabla de resultados
            if (document.getElementById('resultadosTable')) {
                $('#resultadosTable').DataTable({
                    pageLength: 10,
                    lengthChange: false,
                    ordering: true,
                    info: true,
                    searching: true,
                    language: {
                        url: 'https://cdn.datatables.net/plug-ins/2.0.7/i18n/es-ES.json'
                    }
                });
            }
        });
    </script>

    <style>
        /* Estilo del botÛn "Buscar" cuando est· deshabilitado */
        .btn-brand:disabled,
        .btn-brand[disabled] {
            border: solid 1px #d2d4dd !important;
            background-color: #f5f5f5 !important;
            color: #000000 !important;
            box-shadow: none !important;
            cursor: not-allowed;
        }
    </style>
}
